                        br
                    td(style="border: 1px solid green")
            if (post.descrizione)
                tr
                    td(style="border: 1px solid green")
                        | Descrizione: #{post.descrizione}
                        br
                    td(style="border: 1px solid green")
            if (post.ricompensa)
                tr
                    td(style="border: 1px solid green")
